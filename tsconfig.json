{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src/",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "target": "es2017",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}